# as_empathy

as = c("^(.)(.)_empathy_([9]|1[0-2])_1", "^(.)(.)_empathy_([9]|1[0-2])_2", "^(.)(.)_empathy_([9]|1[0-2])_3", "^(.)(.)_empathy_([9]|1[0-2])_4", "^(.)(.)_empathy_([9]|1[0-2])_5")

