names(wdf) <- gsub("^c_msg_motiv_other_4", "motivother_4", names(wdf))

names(wdf) <- gsub("^c_msg_rel_self_5", "relself_5", names(wdf))
names(wdf) <- gsub("^c_msg_rel_social_5", "relsocial_5", names(wdf))
